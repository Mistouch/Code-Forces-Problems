#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);

    ll t ;
    cin >> t;
    while(t--)
    {
        ll n,k;
        cin >> n >> k;
        string s;
        cin >> s;
        int c=0;
        bool f=true;
        for(int i=0; i<s.size();)
        {
           if(s[i]=='B')
           {
               i+=k;
               c++;
           }
           else
            i++;
        }


        cout<<c<<"\n";

    }
    return 0;

}
